declare ami_arch
declare custom_s3_path

if [ ${arch} = 'amd64' ]
then
    ami_arch='x86_64'
elif [ ${arch} = 'i386' ]
then
    ami_arch='i386'
fi

# CUSTOM_S3_PATH is what the user requested. We add the architecture and date.
custom_s3_path="${CUSTOM_S3_PATH}/${ami_arch}/$(date +'%Y%m%d%H%M')"

aws s3 mv s3://${S3_BUCKET}/ s3://${custom_s3_path}/ \
    --recursive --grant-read emailaddress=za-team@amazon.com
